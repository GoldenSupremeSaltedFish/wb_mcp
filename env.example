# 微博 MCP 工程环境配置
# 复制此文件为 .env 并填入实际值

# 微博相关配置
WEIBO_ACCESS_TOKEN=
WEIBO_COOKIE=
WEIBO_USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36

# MCP 服务配置
MCP_SERVER_PORT=3000
MCP_SERVER_HOST=localhost

# 请求限流配置
REQUEST_RATE_LIMIT=10
REQUEST_INTERVAL_MS=1000

# 日志配置
LOG_LEVEL=info
LOG_FILE=logs/wb_mcp.log

# 数据存储配置
DATA_DIR=./data
EXPORT_DIR=./exports
