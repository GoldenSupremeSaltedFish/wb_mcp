# 微博 MCP 工程环境配置
# 复制此文件为 .env 并填入实际值

# 微博相关配置（从浏览器开发者工具中获取）
WEIBO_ACCESS_TOKEN=your_access_token_here
WEIBO_COOKIE=your_cookie_string_here
WEIBO_USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/140.0.0.0 Safari/537.36 Edg/140.0.0.0

# 微博API额外配置
WEIBO_X_XSRF_TOKEN=your_xsrf_token_here
WEIBO_CLIENT_VERSION=v2.47.120
WEIBO_SERVER_VERSION=v2025.09.29.1

# MCP 服务配置
MCP_SERVER_PORT=3000
MCP_SERVER_HOST=localhost

# 请求限流配置
REQUEST_RATE_LIMIT=10
REQUEST_INTERVAL_MS=1000

# 日志配置
LOG_LEVEL=info
LOG_FILE=logs/wb_mcp.log

# 数据存储配置
DATA_DIR=./data
EXPORT_DIR=./exports
